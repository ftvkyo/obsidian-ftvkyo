{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,

    "inlineSourceMap": true,
    "inlineSources": true,

    "allowJs": false,
    "jsx": "react-jsx",

    "noImplicitAny": true,
    "strictNullChecks": true,

    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],

    "paths": {
      "@/*": ["./src/*"],
    },
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}
