{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,

    "inlineSourceMap": true,
    "inlineSources": true,

    "allowJs": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
    ],

    "paths": {
      "@/*": ["./src/*"],
    },
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}
